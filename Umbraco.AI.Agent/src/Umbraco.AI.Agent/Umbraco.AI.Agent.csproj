<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <Title>Umbraco AI Agent</Title>
        <Description>Agent management plugin for Umbraco AI</Description>
        <PackageReadmeFile>docs\README.md</PackageReadmeFile>
        <PackageTags>umbraco ai agent umbraco-marketplace</PackageTags>
        <IncludeBuildOutput>false</IncludeBuildOutput>
        <IncludeSymbols>false</IncludeSymbols>
        <IncludeReferencedProjects>true</IncludeReferencedProjects>
    </PropertyGroup>

    <ItemGroup>
        <Content Include="..\..\README.md" Pack="true" PackagePath="docs" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\Umbraco.AI.Agent.Startup\Umbraco.AI.Agent.Startup.csproj" />
        <ProjectReference Include="..\Umbraco.AI.Agent.Web.StaticAssets\Umbraco.AI.Agent.Web.StaticAssets.csproj" />
    </ItemGroup>
</Project>
