<Project Sdk="Microsoft.NET.Sdk">
  <PropertyGroup>
    <TargetFramework>net10.0</TargetFramework>
    <Nullable>enable</Nullable>
    <Title>Umbraco AI Deploy Prompt</Title>
    <Description>Umbraco Deploy support for Umbraco.AI.Prompt</Description>
  </PropertyGroup>

  <!-- Use project references for local dev, NuGet packages for CI -->
  <PropertyGroup>
    <UseProjectReferences Condition="'$(UseProjectReferences)' == ''">true</UseProjectReferences>
  </PropertyGroup>

  <!-- Core Umbraco.AI packages -->
  <ItemGroup Condition="'$(UseProjectReferences)' == 'true'">
    <ProjectReference Include="..\..\..\Umbraco.AI.Deploy\src\Umbraco.AI.Deploy\Umbraco.AI.Deploy.csproj" />
    <ProjectReference Include="..\..\..\Umbraco.AI.Prompt\src\Umbraco.AI.Prompt.Startup\Umbraco.AI.Prompt.Startup.csproj" />
  </ItemGroup>

  <ItemGroup Condition="'$(UseProjectReferences)' != 'true'">
    <PackageReference Include="Umbraco.AI.Deploy" />
    <PackageReference Include="Umbraco.AI.Prompt.Startup" />
  </ItemGroup>

  <ItemGroup>
    <PackageReference Include="Umbraco.Deploy.Infrastructure" />
  </ItemGroup>
</Project>
