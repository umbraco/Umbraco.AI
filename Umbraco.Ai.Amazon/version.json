{
  "$schema": "https://raw.githubusercontent.com/dotnet/Nerdbank.GitVersioning/master/src/NerdBank.GitVersioning/version.schema.json",
  "version": "1.0.0",
  "assemblyVersion": {
    "precision": "build"
  },
  "gitCommitIdShortFixedLength": 7,
  "nugetPackageVersion": {
    "semVer": 2
  },
  "publicReleaseRefSpec": [
    "^refs/heads/main$",
    "^refs/heads/release/amazon-",
    "^refs/heads/hotfix/amazon-",
    "^refs/tags/release-amazon-"
  ],
  "cloudBuild": {
    "buildNumber": {
      "enabled": true
    }
  },
  "release": {
    "branchName": "release/amazon-{version}"
  }
}
