<Project Sdk="Microsoft.NET.Sdk">
    <PropertyGroup>
        <Title>Umbraco Ai Prompt Web</Title>
        <Description>Management API for Umbraco Ai Prompt</Description>
    </PropertyGroup>

    <PropertyGroup>
        <UseLocalUmbracoAi Condition="'$(UseLocalUmbracoAi)' == ''">false</UseLocalUmbracoAi>
    </PropertyGroup>

    <ItemGroup Condition="'$(UseLocalUmbracoAi)' == 'true'">
        <ProjectReference Include="..\..\..\Umbraco.Ai\src\Umbraco.Ai.Web\Umbraco.Ai.Web.csproj" />
    </ItemGroup>

    <ItemGroup Condition="'$(UseLocalUmbracoAi)' != 'true'">
        <PackageReference Include="Umbraco.Ai.Web" />
    </ItemGroup>

    <ItemGroup>
        <PackageReference Include="Umbraco.Cms.Api.Management" />
    </ItemGroup>

    <ItemGroup>
        <ProjectReference Include="..\Umbraco.Ai.Prompt.Core\Umbraco.Ai.Prompt.Core.csproj" />
    </ItemGroup>
</Project>
